% layout 'default';
% title 'Home';
<h2>Messages from the World Wide Web</h2>
<% for my $row (reverse @$posts) { %>
<table>
  <tr>
    <th>Date:</th>
    <td><%= @$row[0] %></td>
  </tr>
  <tr>
    <th>Name:</th>
    <td><%= @$row[1] %></td>
  </tr>
  <tr>
    <th>Message:</th>
    <td><%= @$row[2] %></td>
  </tr>
</table>
<br>
<% } %>
