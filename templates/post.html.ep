% layout 'default';
% title 'New Post';
<h2>Create a New Post</h2>
<form method="post">
  <table>
    <tr>
      <th>Name:</th>
      <td><%= input_tag 'name' %></td>
    </tr>
    <tr>
      <th>Message:</th>
      <td><%= text_area 'message', cols => 40, rows => 6 %></td>
    </tr>
    <tr>
      <th>&nbsp;</th>
      <td><%= submit_button 'Send it' %></td>
    </tr>
  </table>
</form>
